  "info": {
    "contact": {},
    "description": "Manage enterprise settings such as a user inactivity timeout, user attribution for alerts, and global\nsettings for policies and alerts.\n",
    "title": "Prisma Cloud Enterprise Settings API Overview",
    "version": "Latest"
  },
  "openapi": "3.0.0",
  "paths": {
    "/settings/enterprise": {
      "get": {
        "description": "Returns enterprise settings for your tenant.",
        "operationId": "get-enterprise-settings",
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/EnterpriseSettingsRequestModel"
                }
              }
            },
            "description": "successful operation"
          },
          "500": { "description": "internal_error" }
        },
        "security": [{ "x-redlock-auth": [] }],
        "summary": "Enterprise Settings - GET",
        "tags": ["Settings"],
        "x-codeSamples": [
          {
            "lang": "Python + Requests",
            "source": "import requests\n\nurl = \"https://api.prismacloud.io/settings/enterprise\"\n\nheaders = {\"x-redlock-auth\": \"REPLACE_KEY_VALUE\"}\n\nresponse = requests.request(\"GET\", url, headers=headers)\n\nprint(response.text)"
          },
          {
            "lang": "Shell + Curl",
            "source": "curl --request GET \\\n  --url https://api.prismacloud.io/settings/enterprise \\\n  --header 'x-redlock-auth: REPLACE_KEY_VALUE'"
          }
        ]
      },
      "post": {
        "description": "Configures enterprise settings for your tenant.",
        "operationId": "update-enterprise-settings",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EnterpriseSettingsRequestModel"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "successful operation" },
          "400": { "description": "bad_request" },
          "500": { "description": "internal_error" }
        },
        "security": [{ "x-redlock-auth": [] }],
        "summary": "Enterprise Settings - POST",
        "tags": ["Settings"],
        "x-codeSamples": [
          {
            "lang": "Python + Requests",
            "source": "import requests\n\nurl = \"https://api.prismacloud.io/settings/enterprise\"\n\npayload = {\n    \"accessKeyMaxValidity\": 0,\n    \"alarmEnabled\": True,\n    \"applyDefaultPoliciesEnabled\": True,\n    \"defaultPoliciesEnabled\": {\n        \"property1\": True,\n        \"property2\": True\n    },\n    \"requireAlertDismissalNote\": True,\n    \"sessionTimeout\": 0,\n    \"userAttributionInNotification\": True\n}\nheaders = {\n    \"content-type\": \"application/json\",\n    \"x-redlock-auth\": \"REPLACE_KEY_VALUE\"\n}\n\nresponse = requests.request(\"POST\", url, json=payload, headers=headers)\n\nprint(response.text)"
          },
          {
            "lang": "Shell + Curl",
            "source": "curl --request POST \\\n  --url https://api.prismacloud.io/settings/enterprise \\\n  --header 'content-type: application/json' \\\n  --header 'x-redlock-auth: REPLACE_KEY_VALUE' \\\n  --data '{\"accessKeyMaxValidity\":0,\"alarmEnabled\":true,\"applyDefaultPoliciesEnabled\":true,\"defaultPoliciesEnabled\":{\"property1\":true,\"property2\":true},\"requireAlertDismissalNote\":true,\"sessionTimeout\":0,\"userAttributionInNotification\":true}'"
          }
        ]
      }
    }
  },
